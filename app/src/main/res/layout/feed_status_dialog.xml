<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/components_height"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@drawable/round_remove" />

    <LinearLayout
        android:id="@+id/select_type"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_of_rent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/end"
            style="@style/focusable_clickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_0.5"
            android:layout_weight="1"
            android:background="@drawable/gray_stroke">

            <CheckBox
                android:id="@+id/end_checkBox"
                style="@style/not_focusable_clickable"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/checkbox"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView5"
                style="@style/not_focusable_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="@string/over"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toTopOf="@+id/end_checkBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin"
                android:src="@drawable/end"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/initialize"
            style="@style/focusable_clickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gray_stroke">

            <CheckBox
                android:id="@+id/initialize_checkBox"
                style="@style/not_focusable_clickable"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/checkbox"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView1"
                style="@style/not_focusable_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="@string/initialize"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toTopOf="@+id/initialize_checkBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin"
                android:src="@drawable/initialize"
                app:layout_constraintBottom_toTopOf="@+id/textView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/growing"
            style="@style/focusable_clickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_0.5"
            android:layout_weight="1"
            android:background="@drawable/gray_stroke">

            <CheckBox
                android:id="@+id/growing_checkBox"
                style="@style/not_focusable_clickable"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/checkbox"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                style="@style/not_focusable_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="نامي"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toTopOf="@+id/growing_checkBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin"
                android:src="@drawable/growing"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_of_rent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remove"
            style="@style/focusable_clickable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/components_height"
            android:layout_marginEnd="2.5dp"
            android:layout_weight="1"
            android:background="@drawable/gray_stroke">

            <CheckBox
                android:id="@+id/remove_checkbox"
                style="@style/not_focusable_clickable"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/checkbox"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/not_focusable_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toBottomOf="@+id/remove_checkbox"
                app:layout_constraintEnd_toStartOf="@+id/remove_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/remove_checkbox" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add"
            style="@style/focusable_clickable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/components_height"
            android:layout_marginStart="2.5dp"
            android:layout_weight="1"
            android:background="@drawable/gray_stroke">

            <CheckBox
                android:id="@+id/add_checkbox"
                style="@style/not_focusable_clickable"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/checkbox"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/not_focusable_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:textSize="@dimen/text_size"
                app:layout_constraintBottom_toBottomOf="@+id/add_checkbox"
                app:layout_constraintEnd_toStartOf="@+id/add_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/add_checkbox" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/num_of_bags"
        android:layout_width="match_parent"
        android:layout_height="@dimen/components_height"
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/input_filed"
        android:gravity="center"
        android:hint="@string/enter_num_of_bags"
        android:inputType="number"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/price_of_ton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/components_height"
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/input_filed"
        android:gravity="center"
        android:hint="@string/enter_price_of_ton"
        android:inputType="number"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/components_height"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/button_ripple_effect"
        android:text="@string/complete_registration"
        android:textSize="@dimen/text_size" />

</LinearLayout>